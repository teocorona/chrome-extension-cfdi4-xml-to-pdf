{
  "manifest_version": 3,
  "name": "CFDI4.0 XML to PDF",
  "description": "A chrome extension for generating PDF invoices from CFDI 4.0 XML",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "logo.png",
        "Roboto-Light.ttf",
        "Roboto-Medium.ttf",
        "RobotoMono-Light.ttf",
        "RobotoMono-Medium.ttf"
      ],
      "matches": []
    }
  ]
}